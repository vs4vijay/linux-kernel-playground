# Generic x86_64 Buildroot Configuration
# Basic Linux system suitable for QEMU and modern x86_64 hardware

# Architecture
BR2_x86_64=y
BR2_x86_corei7=y
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y
BR2_TOOLCHAIN_BUILDROOT_CXX=y

# System configuration
BR2_ROOTFS_DEVICE_CREATION_DYNAMIC_DEVTMPFS=y
